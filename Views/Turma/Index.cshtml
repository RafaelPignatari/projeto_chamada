@model IEnumerable<ProjetoN2.Models.TurmaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Turmas</h3>
    <a class="btn btn-striped btn-outline-dark" href="/Turma/Create">Adicionar</a>
    <br><br><br>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Curso</th>
                <th>Semestre</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turma in Model)
            {
                <tr>
                    <td>@turma.Id</td>
                    <td>@turma.CursoNome</td>
                    <td>@turma.Semestre</td>
                    <td>
                        <a href="/turma/Update?id=@turma.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a href="/turma/Delete?id=@turma.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
