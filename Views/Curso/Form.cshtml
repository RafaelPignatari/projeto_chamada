@model ProjetoN2.Models.CursoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form class="form-horizontal" asp-action="Save" asp-controller="Curso">
        <input type="hidden" asp-for="Id">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome">
        <span class="text-danger" asp-validation-for="Nome"></span>
        <br>
        <label asp-for="Periodo"></label>
        <select class="form-control" asp-for="Periodo" asp-items="Html.GetEnumSelectList<ProjetoN2.Enums.EPeriodo>()"></select>
        <span class="text-danger" asp-validation-for="Nome"></span>
        <br>

        <button class="btn btn-outline-dark">Salvar</button>
    </form>
</div>
