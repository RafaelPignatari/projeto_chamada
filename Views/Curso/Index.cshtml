@model IEnumerable<ProjetoN2.Models.CursoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Cursos</h3>
    <a class="btn btn-striped btn-outline-dark" href="/Curso/Create">Adicionar</a>
    <br><br><br>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Período</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Id</td>
                    <td>@curso.Nome</td>
                    <td>@curso.Periodo</td>
                    <td>
                        <a href="/curso/Update?id=@curso.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a href="/curso/Delete?id=@curso.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
