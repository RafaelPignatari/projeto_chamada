@model IEnumerable<ProjetoN2.Models.AulaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Aulas</h3>
    <a class="btn btn-striped btn-outline-dark" href="/aula/Create">Adicionar</a>
    <br><br><br>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Turma</th>
                <th>Materia</th>
                <th>Sala Nº</th>
                <th>Data</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aula in Model)
            {
                <tr>
                    <td>@aula.Id</td>
                    <td>@aula.TurmaNome</td>
                    <td>@aula.MateriaNome</td>
                    <td>@aula.SalaId</td>
                    <td>@aula.Data.ToString("d")</td>
                    <td>
                        <a href="/aula/Update?id=@aula.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a href="/aula/Delete?id=@aula.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
