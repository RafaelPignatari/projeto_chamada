@model IEnumerable<ProjetoN2.Models.AlunoViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Alunos</h3>
    <a class="btn btn-striped btn-outline-dark" href="/aluno/Create">Adicionar</a>
    <br><br><br>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Turma</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td>@aluno.Id</td>
                    <td>@aluno.Nome</td>
                    <td>@aluno.TurmaNome</td>
                    <td>
                        <a href="/aluno/Update?id=@aluno.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a href="/aluno/Delete?id=@aluno.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
