@model IEnumerable<ProjetoN2.Models.MateriaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>Materias</h3>
    <a class="btn btn-striped btn-outline-dark" href="/materia/Create">Adicionar</a>
    <br><br><br>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Curso</th>
                <th>Professor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var materia in Model)
            {
                <tr>
                    <td>@materia.Id</td>
                    <td>@materia.Nome</td>
                    <td>@materia.CursoNome</td>
                    <td>@materia.ProfessorNome</td>
                    <td>
                        <a href="/materia/Update?id=@materia.Id" class="btn btn-outline-warning">Atualizar</a>
                        <a href="/materia/Delete?id=@materia.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
